<%= @post.title %>
<%= @post.author %>
<%= @post.body %>
<%= @post.like_count %>

<ul>
  Tags:
<% @post.tags.each do |tag| %>
  <li><%= tag.name %></li>
<% end %>
</ul>
<a href="/posts/<%=@post.id%>/edit">Edit</a>
<form action="/posts/<%= @post.id %>" method="post">
  <div style="delete-button">
    <input name="_method" type="hidden" value="delete" />
    <input type='submit' value='Delete?'>
  </div>
</form>

